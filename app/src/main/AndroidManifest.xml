<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yc.ycseatview">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.SeatSettingActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".view.SeatInfoHorizontalActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".view.SeatInfoVerticalActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".view.SeatImageActivity"/>
        <activity android:name=".view.RecyclerViewActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.ScrollRecyclerViewActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>