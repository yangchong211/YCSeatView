<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_seat_dialog_r10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/gray_dark"
                android:textSize="20sp"
                android:text="取消"/>
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="200dp"
                android:paddingRight="200dp"
                android:gravity="center"
                android:textColor="@color/color_333333"
                android:textSize="20sp"
                android:text="列数/行数"/>
            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:text="确定"/>
        </LinearLayout>


        <com.yc.ycseatview.pickerview.WheelView
            android:id="@+id/wheel_view"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            app:wv_dividerColor="@color/white"
            app:wv_normalItemTextColor="@color/black"
            app:wv_selectedItemTextColor="@color/color_f00101"
            app:wv_showDivider="true"
            app:wv_textSize="24sp" />

    </LinearLayout>

</FrameLayout>
